# Arch-OS X Maintainer: Sean Yeh <snoblo at archlinux dot us>
# Maintainer: Daniel J Griffiths <ghost1227@archlinux.us>

pkgname=bashrun
pkgver=0.16
pkgrel=1
pkgdesc="An x11 application launcher based on bash."
arch=('any')
url="http://sourceforge.net/projects/bashrun"
license=('GPL')
optdepends=('xdotool: allow bashrun to run in background')
install=bashrun.install
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('f927f29edb209b1028a88cf9db8569d7')

build() {
	/usr//bin/true
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}

	install -d ${pkgdir}/opt/arch/{bin,share/{bashrun,man/man1}}
	install -m 755 bashrun ${pkgdir}/opt/arch/bin/
	install -m 644 bashrun.1 ${pkgdir}/opt/arch/share/man/man1/
	install -m 644 bashrc ${pkgdir}/opt/arch/share/bashrun/
}
